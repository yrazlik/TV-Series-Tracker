<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/castIV"
        android:layout_width="63dp"
        android:layout_centerVertical="true"
        android:layout_height="89dp" />

    <RelativeLayout
        android:id="@+id/castInfoContainer"
        android:layout_toRightOf="@+id/castIV"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yrazlik.tvseriestracker.view.RobotoTextView
            android:id="@+id/personTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="14sp"
            android:textColor="@color/text_black"
            android:ellipsize="end"/>

        <com.yrazlik.tvseriestracker.view.RobotoTextView
            android:id="@+id/characterTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personTV"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:textStyle="italic"
            android:ellipsize="end"/>

    </RelativeLayout>


</RelativeLayout>