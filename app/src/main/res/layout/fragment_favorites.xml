<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/favoritesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/list_divider_gray_with_margin"
        android:dividerHeight="0.5dp"
        android:visibility="gone">

    </ListView>

    <RelativeLayout
        android:id="@+id/noShowsRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/tvIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_tv" />

        <com.yrazlik.tvseriestracker.view.RobotoTextView
            android:id="@+id/noFavoriteTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvIV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            style="@style/NoEpisodesTextStyle"
            android:text="@string/no_favorite_show">

        </com.yrazlik.tvseriestracker.view.RobotoTextView>

    </RelativeLayout>

</RelativeLayout>