<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TrendingShowsTitle">
        <item name="android:textColor">#79797a</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TrendingShowsSubtitle">
        <item name="android:textColor">#878787</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DateShowsSubtitle">
        <item name="android:textColor">#1c7c23</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShowDetailMainTitleStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ShowDetailTitleStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShowDetailTextStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SeasonHeaderTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EpisodeNameTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EpisodeCountTextStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EpisodeDateTextStyle">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ProgressBarGray">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/loading_progress_gray</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">1500</item>
        <item name="android:minWidth">37dip</item>
        <item name="android:maxWidth">37dip</item>
        <item name="android:minHeight">37dip</item>
        <item name="android:maxHeight">37dip</item>
    </style>

    <style name="AutoCompleteDropdownStyle" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/colorDivider</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="NormalTextStyle" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SmallTextStyle" >
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ActionBarTitleStyle" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBarSubTitleStyle" >
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CastNameStyle" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
